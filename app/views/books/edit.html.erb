<h1>Editing Book</h1>

<% if @book.errors.any? %>
 <div class="error-box">
     <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
     <ul>
          <% @book.errors.full_messages.each do |message| %>
           <li><%= message %></li>
          <%end%>
     </ul>
 </div>
<%end%>

<%= form_with model: @book,:url => {:action => :update} do |f| %>

 <h4>Title</h4>
 <%= f.text_field :title %>

 <h4>Body</h4>
 <%= f.text_area :body %>

 <p class="submit"><%= f.submit 'Update Book' %></p>
<%end%>
