<h1>Books</h1>
   <table>
     <thead>
       <tr>
         <th>Title</th>
         <th>Body</th>
         <th class="space"></th>
       </tr>
     </thead>
     <tbody>
      <% @books.each do |book| %>
       <tr>
         <td><%= book.title %></td>
         <td><%= book.body %></td>
         <td><%= link_to 'Show', show_path(book.id) %></td>
         <td><%= link_to 'Edit', edit_path(book.id) %></td>
         <td><%= link_to 'destroy', destroy_list_path(book.id),method: :delete, "data-confirm" => "Are you sure?" %></td>
       </tr>
      <%end%>
     </tbody>

 </table>

<h1>New book</h1>
<% if @book.errors.any? %>
 <div class="error-box">
     <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
     <ul>
          <% @book.errors.full_messages.each do |message| %>
           <li><%= message %></li>
          <%end%>
     </ul>
 </div>
<%end%>

  <%= form_with model: @book,url: '/books', method: :post do |f| %>
    <div class="field">
        <p>Title</p>
  　     <%= f.text_field :title %>
  　</div>
  　<div class="field">
  　     <p>body</p>
  　     <%= f.text_area :body %>
    </div>
  　<p class="submit"><%= f.submit 'Create Book' %></p>
  <%end%>