<h1>Books</h1>
   <table>
     <thead>
       <tr>
         <th>Title</th>
         <th>Body</th>
         <th class="space"></th>
       </tr>
     </thead>
     <tbody>
      <% @lists.each do |list| %>
       <tr>
         <td><%= list.title %></td>
         <td><%= list.body %></td>
         <td><%= link_to 'Show', show_path(list.id) %></td>
         <td><%= link_to 'Edit', edit_path(list.id) %></td>
         <td><%= link_to 'destroy', destroy_list_path(list.id),method: :delete, "data-confirm" => "Are you sure?" %></td>
       </tr>
      <%end%>
     </tbody>

 </table>

<h1>New book</h1>
  <%= form_with model: @list do |f| %>
　  <h4>Title</h4>
  　<%= f.text_field :title %>
  　<h4>body</h4>
  　<%= f.text_area :body %>
  　<p><%= f.submit 'Create Book' %></p>
  <%end%>